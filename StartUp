int GPS_Pin_Enable=4;

void setup()
{
  pinMode(GPS_Pin_Enable,OUTPUT); //Set out GPS_Pin_Enable as an output
  digitalWrite(GPS_Pin_Enable,LOW);//Turn Off gps
  Serial.begin(9600);
  while (!Serial) {
    ; // wait for serial port to connect. Needed for Leonardo only
  }
}

void loop()
{
  
digitalWrite(GPS_Pin_Enable,HIGH);//Turn on GPS
Setup_GPS(); //Setup the GPS Environment
Get_GPS(); //Get GPS Data
digitalWrite(GPS_Pin_Enable,LOW);//Turn Off gps

sprintf(mySmsString,"%s",mySmsStringLat,mySmsStringLon);
mySmsString[21]=mySmsStringBearLat;
mySmsString[22]=mySmsStringBearLon;
//mySmsString = "testing";
